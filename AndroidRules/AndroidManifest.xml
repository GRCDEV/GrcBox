<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.upv.grc.grcbox.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />
    
	<uses-permission android:name="android.permission.INTERNET" />
	<application
	    android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
	   	<service android:name="es.upv.grc.grcbox.androlib.GrcBoxClientService"
	   	    android:exported="false"/>
        <activity
            android:name="es.upv.grc.grcbox.android.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="es.upv.grc.grcbox.android.activities.NewRule"
            android:label="@string/title_activity_new_rule"
            android:parentActivityName="es.upv.grc.grcbox.android.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.upv.grc.grcbox.android.MainActivity" />
        </activity>
    </application>
</manifest>
